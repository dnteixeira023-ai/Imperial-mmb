<script>
  // ====== CONFIG ======
  // coloque aqui o número do WhatsApp com código do país + DDD + número, sem + ou espaços.
  // Exemplo: 55 (Brasil) + 21 (DDD) + 988419164 => 5521988419164
  const WHATSAPP_NUMBER = "5521988419164";

  // estado
  let step = 1;
  const totalSteps = 3;

  // helper: update progress bar & show step
  function showStep(n){
    step = n;
    document.querySelectorAll('.step').forEach(el => el.style.display = 'none');
    const el = document.querySelector('[data-step="'+n+'"]');
    if(el) el.style.display = 'block';
    const pct = Math.round((n-1)/(totalSteps-1)*100);
    document.getElementById('bar').style.width = pct + '%';
  }

  function nextStep(){
    if(!validateStep(step)) return;
    if(step < totalSteps) showStep(step+1);
  }
  function prevStep(){ if(step>1) showStep(step-1); }

  // valida campos básicos por etapa
  function validateStep(s){
    if(s === 1){
      const nick = document.getElementById('nick').value.trim();
      const idade = document.getElementById('idade').value.trim();
      const pos = document.getElementById('posicao').value;
      if(!nick){ alert('Preencha seu nick no jogo.'); return false; }
      if(!idade){ alert('Informe sua idade.'); return false; }
      if(!pos){ alert('Escolha uma posição.'); return false; }
    }
    if(s === 3){
      const comp = document.getElementById('comprometimento').value;
      const pq = document.getElementById('porque').value.trim();
      if(!comp){ alert('Informe seu comprometimento.'); return false; }
      if(!pq){ alert('Conte por que quer entrar no Imperial.'); return false; }
    }
    return true;
  }

  // monta mensagem e abre WhatsApp
  function submitForm(){
    if(!validateStep(3)) return;

    // coletar dados
    const data = {
      nick: document.getElementById('nick').value.trim(),
      nome_real: document.getElementById('nome_real').value.trim(),
      idade: document.getElementById('idade').value.trim(),
      posicao: document.getElementById('posicao').value,
      exp: document.getElementById('exp').value,
      clubes: document.getElementById('clubes').value,
      stats: document.getElementById('stats').value.trim(),
      comprometimento: document.getElementById('comprometimento').value,
      porque: document.getElementById('porque').value.trim(),
      contato_op: document.getElementById('contato_op').value.trim()
    };

    // montar texto com formatação legível
    let mensagem = `*Nova inscrição - Imperial MMB*%0A%0A`;
    mensagem += `Nick: ${encodeURIComponent(data.nick)}%0A`;
    if(data.nome_real) mensagem += `Nome real: ${encodeURIComponent(data.nome_real)}%0A`;
    mensagem += `Idade: ${encodeURIComponent(data.idade)}%0A`;
    mensagem += `Posição: ${encodeURIComponent(data.posicao)}%0A%0A`;
    mensagem += `*Experiência*:%0A- Nivel: ${encodeURIComponent(data.exp||'Não informado')}; Clube anterior: ${encodeURIComponent(data.clubes||'Não informado')}.%0A`;
    if(data.stats) mensagem += `Observações: ${encodeURIComponent(data.stats)}%0A%0A`;
    mensagem += `Comprometimento: ${encodeURIComponent(data.comprometimento)}%0A`;
    mensagem += `Por que quer entrar: ${encodeURIComponent(data.porque)}%0A`;
    if(data.contato_op) mensagem += `Contato: ${encodeURIComponent(data.contato_op)}%0A`;

    // montar url do wa.me
    const url = `https://wa.me/${WHATSAPP_NUMBER}?text=${mensagem}`;

    // mostrar confirmação e abrir WhatsApp
    const res = document.getElementById('resultArea');
    res.innerHTML = `<div class="success"><strong>Quase lá!</strong><p>Sua inscrição será aberta no WhatsApp do clube. Clique no botão abaixo para enviar.</p>
      <div style="margin-top:12px;display:flex;gap:8px;justify-content:center">
        <a href="${url}" target="_blank" class="btn" style="text-decoration:none">Abrir no WhatsApp</a>
        <button class="btn ghost" onclick="editSubmission()">Editar</button>
      </div></div>`;

    // opcional: abrir automaticamente (descomente se quiser auto abrir)
    // window.open(url, "_blank");
  }

  function editSubmission(){
    document.getElementById('resultArea').innerHTML = '';
    showStep(1);
  }

  // inicio
  showStep(1);
</script>
</body>
</html>